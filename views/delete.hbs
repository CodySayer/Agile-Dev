                <label for="exampleInputPassword1">Admin Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="passwd">
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
    <br>
    <span style="color: white; position: fixed; bottom: 0; width: 100%;">{{> footer}}</span>
