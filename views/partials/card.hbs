<div class="container">
    <div class="card" style="border-radius: 10px; border: 2px solid black;">
        <div class="card-body">
            <p class="text-justify" style="color: black; background-color:white;">{{{content}}}</p>
        </div>
        <div>
            <form action="/chat/submit" method="post">
                <div class="form-group">
                    <input type="hidden" id="username" name="username" value={{username}}>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Message</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" rows="1" name="content"></textarea>
                    <button type="submit" rows="1" class="btn btn-primary">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>